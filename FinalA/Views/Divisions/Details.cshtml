@model FinalA.Models.Division

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Division Details - @Html.DisplayFor(model => model.Name)</h2>

<div>
    <h4>Division</h4>
    <hr />

    @foreach (var item in Model.Teams.OrderBy(t => t.DivisionID == Model.DivisionID))
    {
            <td>
                @Html.ActionLink(item.Name, "Details", new { id = item.DivisionID })
            </td>
    }

    
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
